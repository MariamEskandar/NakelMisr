<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#80ccff">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="البيانات الشخصيه "
                android:gravity="center"
                android:padding="5px"
                android:textSize="70px" />

            <TextView
                android:id="@+id/PNameh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="الاسم  "
                android:padding="20px"
                android:textSize="50px"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/PName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:layout_marginRight="20px"
                android:gravity="center"
                android:hint="الاسم  "
                android:padding="20px"
                android:textSize="50px"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/Pphoneh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:layout_marginRight="20px"
                android:hint="التلفون"

                android:padding="10px"
                android:textSize="40px"
                android:visibility="visible" />



            <TextView
                android:id="@+id/Pphone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="التلفون"
                android:padding="10px"
                android:layout_marginLeft="20px"
                android:layout_marginRight="20px"
                android:textSize="40px"
                android:visibility="visible" />

            <!--

                        <ImageView
                            android:id="@+id/imageViewDownload5555"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20px"
                            android:layout_marginRight="20px"
                            app:srcCompat="@drawable/ic_local_shipping_black_24dp" />
            -->
                        <TextView
                            android:id="@+id/PnationalNumber"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10px"
                            android:text="الرقم القومى"
                            android:textSize="40px"
                            android:textStyle="bold"
                            android:visibility="invisible" />


                        <TextView
                            android:id="@+id/PcarNumber"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="رقم السياره "
                            android:padding="10px"
                            android:textSize="40px"
                            android:visibility="invisible" />

                        <TextView
                            android:id="@+id/PlicenseNumber"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10px"
                            android:text="رقم الرخصه "
                            android:textSize="40px"
                            android:visibility="invisible" />


                        <TextView
                            android:id="@+id/Postid"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="TextView"
                            android:textSize="50px"
                            android:visibility="invisible" />



                        <!--
                           <ImageView
                               android:id="@+id/imageViewkkkk"
                               android:layout_width="match_parent"
                               android:layout_height="500px"
                               android:visibility="visible"
                               app:srcCompat="@drawable/common_google_signin_btn_icon_dark" />
               -->

        </LinearLayout>

    </ScrollView>



</LinearLayout>
