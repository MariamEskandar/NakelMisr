<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/Accept_Rreqest_UserName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="البيانات الشخصيه لهذاللعميل"
                    android:textColor="@color/common_google_signin_btn_text_dark_focused"
                    android:background="@android:drawable/screen_background_light_transparent"
                    android:textSize="40px" />

                <TextView
                    android:id="@+id/Accept_Rreqest_UserName_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:textColor="@android:color/transparent"
                    android:padding="10dp"
                    android:text="@string/hint_user_id"
                    android:textSize="30px"
                    android:theme="@android:style/Widget.Holo.Light"
                    android:visibility="visible" />

            </RelativeLayout>

            <TextView
                android:id="@+id/Accept_Rreqest_Moneyh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:padding="10dp"
                android:text="السعر"
                android:textSize="40px"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Accept_Rreqest_Money"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="لسعر"
                android:padding="10dp"
                android:text="السعر"
                android:textSize="40px"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Accept_Rreqest_Taxe_Phone_Numberh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="تلفون السائق"
                android:textSize="40px"
                android:visibility="visible" />


            <TextView
                android:id="@+id/Accept_Rreqest_Taxe_Phone_Number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="تلفون السائق"
                android:textSize="40px"
                android:visibility="visible" />



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/Accept_Rreqest_Taxe_idh"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingBottom="20px"
                    android:padding="10dp"
                    android:text="البيانات الشخصيه لهذا السائق"
                    android:textColor="@color/common_google_signin_btn_text_dark_focused"
                    android:background="@android:drawable/screen_background_light_transparent"
                    android:textSize="40px"
                    android:visibility="invisible"/>

                <TextView
                    android:id="@+id/Accept_Rreqest_Taxe_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20px"
                    android:background="@android:color/transparent"
                    android:padding="10dp"
                    android:text="Taxi_uid"
                    android:textColor="@android:color/transparent"
                    android:textSize="30px"
                    android:visibility="invisible" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/Accept_Rreqest_Taxe_idhh"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20px"
                    android:background="@android:drawable/screen_background_light_transparent"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="العرض"
                    android:paddingBottom="20px"
                    android:textColor="@color/common_google_signin_btn_text_dark_focused"
                    android:textSize="40px" />


                <TextView
                    android:id="@+id/Accept_Rreqest_Post_Id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30px"
                    android:paddingBottom="20px"
                    android:paddingTop="20px"
                    android:text="Post_Id"
                    android:textColor="@android:color/transparent"
                    android:textSize="40px"
                    android:visibility="visible" />


            </RelativeLayout>



        </LinearLayout>
    </ScrollView>


</android.support.v7.widget.CardView>