<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:layout_marginTop="20dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/Post_UserName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:padding="10dp"
                    android:text="اسم العميل "
                    android:textSize="50px"
                    android:theme="@android:style/Widget.Holo.Light" />

                <TextView
                    android:id="@+id/uidButtoninvisiblexml"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:drawable/screen_background_light_transparent"
                    android:padding="10dp"
                    android:text="userid"
                    android:textColor="@android:drawable/screen_background_light_transparent"
                    android:textSize="45px"
                    android:textStyle="bold"
                    android:theme="@android:style/Widget.Holo.Light" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">


                <TextView
                    android:id="@+id/PostTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:padding="10dp"
                    android:text="وقت نشر العرض"
                    android:textSize="25px"
                    android:textStyle="bold"
                    android:theme="@android:style/Widget.Holo.Light" />

                <TextView
                    android:id="@+id/textpublishpost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:text="نشر فى "
                    android:textSize="20px"
                    android:textStyle="bold" />


            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/Description_title_BlogViwe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:linksClickable="false"
                android:longClickable="false"
                android:textStyle="bold"
                android:nestedScrollingEnabled="false"
                android:padding="10dp"
                android:text="تفاصيل العرض"
                android:textColor="#054359"
                android:textIsSelectable="true"
                android:textSize="50px" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="3">


                <TextView
                    android:id="@+id/Weight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:textSize="40px"
                    android:text="الوزن"/>

                <TextView
                    android:id="@+id/textKilogram"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:padding="10dp"
                    android:text="الوزن"
                    android:textSize="30px"

                    android:textStyle="bold" />



            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    android:id="@+id/MonyOffer_title_BlogViwe"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:textStyle="bold"
                    android:textSize="40px"
                    android:pointerIcon="none"
                    android:text="السعر" />


                <TextView
                    android:id="@+id/textoffere"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginRight="20px"
                    android:layout_weight="2"
                    android:padding="10dp"
                    android:textStyle="bold"
                    android:textSize="30px"
                    android:text="السعر" />



            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="3">


                <TextView
                    android:id="@+id/Fromwhere_title_BlogViwe"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:textSize="40px"
                    android:text="المحافظه" />

                <TextView
                    android:id="@+id/textfromwhre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginRight="20px"
                    android:layout_weight="2"
                    android:padding="10dp"
                    android:text="من محافظة"
                    android:textSize="30px"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="3">


                <TextView
                    android:id="@+id/TopWhere_title_BlogViwe"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:text="المحافظه"
                    android:textSize="40px"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/texttowhre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginRight="20px"
                    android:layout_weight="2"
                    android:padding="10dp"
                    android:textStyle="bold"
                    android:textSize="30px"
                    android:text="الى محافظه " />



            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/Post_title_BlogViwe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_margin="5px"
                android:focusableInTouchMode="true"
                android:forceHasOverlappingRendering="false"
                android:padding="10dp"
                android:text="العنوان"
                android:textColor="#54b9fc"
                android:textIsSelectable="false"
                android:textSize="50px"
                android:textStyle="bold"
                android:theme="@style/AppTheme" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    android:id="@+id/DaytoMove"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:padding="10dp"
                    android:textStyle="bold"
                    android:textSize="40px"
                    android:text="يوم نقل البضائع " />
                <TextView
                    android:id="@+id/textdaymove"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:textStyle="bold"
                    android:textSize="30px"
                    android:text="يوم تنفيذ طلب" />


            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/TalabVeiw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textStyle="bold"
                android:textSize="60px"
                android:text="قدم عرضك" />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>