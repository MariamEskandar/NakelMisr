<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/Price_UserName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="10dp"
                  android:layout_margin="30px"
                    android:background="@drawable/input_outline"
                    android:text="شاهد بيانات السائق"
                    android:textColor="@color/common_google_signin_btn_text_dark_focused"
                    android:textSize="60px" />

                <TextView
                    android:id="@+id/Price_UserName_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="30px"
                    android:background="@android:drawable/screen_background_light_transparent"
                    android:padding="10dp"
                    android:text="userid"
                    android:textColor="@android:drawable/screen_background_light_transparent"
                    android:textSize="60px"
                    android:theme="@android:style/Widget.Holo.Light"
                    android:visibility="visible" />

            </RelativeLayout>

            <TextView
                android:id="@+id/Price_Money"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="30px"
                android:layout_marginLeft="30px"
                android:layout_marginRight="30px"
                android:background="@drawable/input_outline"
                android:hint="لسعر"
                android:padding="10dp"
                android:text="السعر"
                android:textSize="60px"
                android:textStyle="bold" />

            <Button

                android:id="@+id/acceptcommentrequest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="قبول العرض"
                android:padding="10dp"
                android:background="#1a75ff"
                android:layout_margin="30px"
                android:textSize="60px"
                android:visibility="visible" />

            <TextView
                android:id="@+id/Taxe_Phone_Number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="تلفون السائق"
                android:textSize="40px"
                android:visibility="invisible" />


            <TextView
                android:id="@+id/Price_Post_Id"
                android:layout_width="match_parent"
                android:layout_height="10px"
                android:padding="10dp"
                android:text="Post_Id"
                android:textSize="40px"
                android:visibility="invisible" />


        </LinearLayout>
    </ScrollView>


</android.support.v7.widget.CardView>