<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="animal.nakel.com.nakel.Show_Number"
    android:background="#80ccff">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/Number_texth"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="30px"
                android:background="#33adff"
                android:padding="20px"
                android:text="اتصل بالسائق لاتمام عمليه النقل"
                android:textAlignment="center"
                android:textIsSelectable="true"
                android:textSize="60px"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/Number_texthh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="30px"
                android:inputType="textPersonName"
                android:padding="10px"
                android:text="رقم هاتف السائق"
                android:textSize="50px" />


            <TextView
                android:id="@+id/Number_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20px"
                android:layout_marginLeft="30px"
                android:layout_marginRight="30px"
                android:inputType="textPersonName"
                android:padding="20px"
                android:text="رقم الهاتف"
                android:textSize="60px" />


            <TextView
                android:id="@+id/Price_texth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="30px"
                android:inputType="textPersonName"
                android:padding="10px"
                android:text="السعر "
                android:textSize="50px" />

            <TextView
                android:id="@+id/Price_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="30px"
                android:layout_marginLeft="30px"
                android:layout_marginRight="30px"
                android:background="@drawable/input_outline"
                android:inputType="textPersonName"
                android:padding="20px"
                android:text="السعر"
                android:textSize="60px" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
